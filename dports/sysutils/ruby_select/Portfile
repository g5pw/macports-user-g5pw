# $Id$

PortSystem 1.0
PortGroup select 1.0

name                    ruby_select
version                 0.1
categories              sysutils
platforms               darwin
license                 BSD
maintainers             g5pw
supported_archs         noarch
description             common files for selecting default ruby version
long_description        This port installs files that allow 'port select' to \
                        be used to create links to the preferred default \
                        version of ruby.

homepage                http://www.macports.org/

distfiles

use_configure           no
build                   {}
# install all files
destroot {
    select::install ruby ${filespath}/base
    select::install ruby ${filespath}/none
}

platform darwin {
    post-destroot {
        select::install ruby ${filespath}/ruby-apple
    }
}

livecheck.type     none
